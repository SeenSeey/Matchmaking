type Player {
    playerId: ID!
    nickname: String!
    region: String!
    rating: Int!
}

type StartGame {
    gameKey: ID!
    gameGatewayUrl: String!
}

type Query {
    playerById(playerId: ID!): Player
}

input PlayerInput {
    nickname: String!
    region: String!
    rating: Int!
}

input StartGameInput {
    playerId: ID!
}

type Mutation {
    registerPlayer(input: PlayerInput!): Player
    
    startGame(input: StartGameInput!): StartGame
}